import java.util.Scanner;

class KTP {
    String nama;
    int nik;
    String alamat;
    
    public KTP(String n, int ni, String al){
        nama = n;
        nik = ni;
        alamat = al;
    }
    void tampilKTP(){
        System.out.println("Nama : "+ nama);
        System.out.println("Nik : " + nik);
        System.out.println("Alamat : " + alamat);
    }
}

public class Main {
    public static void main(String[] args) {
        
        Scanner input = new Scanner(System.in);
        
        System.out.print("Masukkan Nama   : ");
        String nama = input.nextLine();
        
        System.out.print("Masukkan Nik   : ");
        int nik = input.nextInt();
        input.nextLine();
        
        System.out.print("Masukkan Alamat   : ");
        String alamat = input.nextLine();
        KTP dataktp = new KTP(nama, nik, alamat);
        dataktp.tampilKTP();
    }
}

//statis
class KTP {
    String nama;
    int nik;
    String alamat;

    // Constructor
    public KTP(String n, int ni, String al) {
        nama = n;
        nik = ni;
        alamat = al;
    }

    // Method biasa
    void tampilKTP() {
        System.out.println("Nama   : " + nama);
        System.out.println("NIK    : " + nik);
        System.out.println("Alamat : " + alamat);
    }
}

public class Main {
    public static void main(String[] args) {
        KTP dataktp = new KTP("Alya", 123, "Bantul");
        dataktp.tampilKTP();
    }
}

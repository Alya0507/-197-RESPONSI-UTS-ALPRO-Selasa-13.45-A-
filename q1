#include <iostream>
#include <string>

using namespace std;

int main() {
    string kalimat = "Algoritma Pemrograman Menyenangkan";
    char hurufDicari1 = 'k';
    char hurufDicari2 = 'K';

    for (int i = 0; i < kalimat.length(); i++) {
        if (kalimat[i] == hurufDicari1 || kalimat[i] == hurufDicari2) {
            cout << "Huruf 'K' ditemukan pada indeks ke-" << i << endl;
        }
    }

    return 0;
}

#include <iostream>
#include <string>
using namespace std;

// Struct untuk menyimpan data KTP
struct KTP {
    string nik;
    string nama;
    string tempatLahir;
    string tanggalLahir;
    string jenisKelamin;
    string alamat;
    string agama;
    string statusPerkawinan;
    string pekerjaan;
    string kewarganegaraan;
};

// Class untuk operasi input dan output
class OperasiKTP {
private:
    KTP data[10]; // array KTP (maksimal 10 anggota)
    int jumlah;

public:
    OperasiKTP() {
        jumlah = 0;
    }

    void inputData() {
        cout << "Masukkan jumlah data anggota: ";
        cin >> jumlah;
        cin.ignore(); // membersihkan buffer

        for (int i = 0; i < jumlah; i++) {
            cout << "\nData ke-" << i + 1 << endl;
            cout << "NIK: "; getline(cin, data[i].nik);
            cout << "Nama: "; getline(cin, data[i].nama);
            cout << "Tempat Lahir: "; getline(cin, data[i].tempatLahir);
            cout << "Tanggal Lahir (dd-mm-yyyy): "; getline(cin, data[i].tanggalLahir);
            cout << "Jenis Kelamin: "; getline(cin, data[i].jenisKelamin);
            cout << "Alamat: "; getline(cin, data[i].alamat);
            cout << "Agama: "; getline(cin, data[i].agama);
            cout << "Status Perkawinan: "; getline(cin, data[i].statusPerkawinan);
            cout << "Pekerjaan: "; getline(cin, data[i].pekerjaan);
            cout << "Kewarganegaraan: "; getline(cin, data[i].kewarganegaraan);
        }
    }

    void tampilkanData() {
        cout << "\n=== DATA KTP ANGGOTA KELOMPOK ===" << endl;
        for (int i = 0; i < jumlah; i++) {
            cout << "\nData ke-" << i + 1 << endl;
            cout << "NIK              : " << data[i].nik << endl;
            cout << "Nama             : " << data[i].nama << endl;
            cout << "Tempat, Tgl Lahir: " << data[i].tempatLahir << ", " << data[i].tanggalLahir << endl;
            cout << "Jenis Kelamin    : " << data[i].jenisKelamin << endl;
            cout << "Alamat           : " << data[i].alamat << endl;
            cout << "Agama            : " << data[i].agama << endl;
            cout << "Status Kawin     : " << data[i].statusPerkawinan << endl;
            cout << "Pekerjaan        : " << data[i].pekerjaan << endl;
            cout << "Kewarganegaraan  : " << data[i].kewarganegaraan << endl;
        }
    }
};

int main() {
    OperasiKTP program;
    program.inputData();
    program.tampilkanData();

    return 0;
}
